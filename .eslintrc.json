{
  "env": {
    "browser": false,
    "es6": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parser": "babel-eslint",
  "rules": {
    "semi": [0, "always"],
    "no-console": 0,
    "class-methods-use-this": 0,
    "no-param-reassign" : 0,
    // https://eslint.org/docs/2.0.0/rules/no-underscore-dangle
    "no-underscore-dangle": [2, { "allow": ["_id"] }]
  }
}
